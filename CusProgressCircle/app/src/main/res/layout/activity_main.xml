<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zebron="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iamasoldier6.cusprogresscircle.MainActivity">

    <com.iamasoldier6.cusprogresscircle.ProgressView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        zebron:circleWidth="15dp"
        zebron:firstColor="#D4F668"
        zebron:secondColor="#2F9DD2"
        zebron:speed="20"/>

    <com.iamasoldier6.cusprogresscircle.ProgressView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        zebron:circleWidth="24dp"
        zebron:firstColor="#16A3FA"
        zebron:secondColor="#D20F02"
        zebron:speed="10"/>

</RelativeLayout>
